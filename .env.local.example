# Copy this file to .env.local and update with your actual values

# Database
DATABASE_URL=YOUR_DATABASE_CONNECTION_STRING
# ... if you use Supabase
DIRECT_URL=

# Site url
# for dev, set to   because it will detect the url + port automatically
# for prod you need to change this to your production url
NEXT_PUBLIC_SITE_URL=

# Authentication
# BETTER_AUTH_URL=https://your-domain.com
# same as NEXT_PUBLIC_SITE_URL， so no need to set
BETTER_AUTH_SECRET=A_RANDOM_SECRET_STRING

# Trusted Origins (comma-separated list of domains allowed for auth)
# Remove localhost in production
TRUSTED_ORIGINS=https://your-domain.com,https://staging.your-domain.com,http://localhost:3000

# WeChat OAuth (optional - leave empty if not using WeChat login)
# Wechat 开放平台网站 App ID 和 App Secret，以支持微信 PC 端扫码登录
WECHAT_WEBSITE_APP_ID=
WECHAT_WEBSITE_APP_SECRET=

# Wechat Service account 服务号，以支持微信移动端登录
WECHAT_SERVICE_ACCOUNT_APP_ID=
WECHAT_SERVICE_ACCOUNT_APP_SECRET=

# Social Login (GitHub 和 Google 登录已禁用)
# GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
# GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET
# GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
# GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Mails
# ... with Plunk
PLUNK_API_KEY=

# Email Development Settings
# Set to true to send real emails in development mode (localhost)
# Default: false (emails are only logged to console in development)
ENABLE_EMAIL_IN_DEV=false

# 腾讯云通用配置项，例如用于 SMS / Tencent Cloud Text Moderation (腾讯云文本内容安全)
TENCENT_CLOUD_SECRET_ID=YOUR_TENCENT_CLOUD_SECRET_ID
TENCENT_CLOUD_SECRET_KEY=YOUR_TENCENT_CLOUD_SECRET_KEY
TENCENT_CLOUD_REGION=ap-shanghai

# SMS Configuration (腾讯云短信服务配置，如果你使用短信 sms 登录的话)
# 这个设置跟 tencen_cloud_region 不同！切换区域可能会导致不可用
TENCENT_SMS_REGION=ap-guangzhou
# 参考教程 https://cloud.tencent.com/document/product/382/43070
TENCENT_SMS_SDK_APP_ID=YOUR_SMS_SDK_APP_ID
TENCENT_SMS_SIGN_NAME=YOUR_SMS_SIGN_NAME
# 短信验证码模板ID
TENCENT_SMS_TEMPLATE_ID=YOUR_SMS_TEMPLATE_ID
# 活动审核短信通知模板ID（可选）
TENCENT_SMS_EVENT_APPROVED_TEMPLATE_ID=YOUR_EVENT_APPROVED_TEMPLATE_ID
TENCENT_SMS_EVENT_REJECTED_TEMPLATE_ID=YOUR_EVENT_REJECTED_TEMPLATE_ID

# Payments
# ... with Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Product price ids
NEXT_PUBLIC_PRICE_ID_PRO_MONTHLY=asdf
NEXT_PUBLIC_PRICE_ID_PRO_YEARLY=asdf
NEXT_PUBLIC_PRICE_ID_LIFETIME=asdf

# File Storage (S3-compatible)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_REGION=

NEXT_PUBLIC_BUCKET_NAME=public
# NEXT_PUBLIC_S3_ENDPOINT should use: https://bucket-name.s3.region.amazonaws.com/file-path
NEXT_PUBLIC_S3_ENDPOINT=

# AI (OpenAI-compatible API)
# ... with OpenAI or any compatible model (DeepSeek, etc.)
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=

# Analytics (统计分析)
# 优先级: Umami > Google Analytics > Baidu Analytics
# 推荐使用 Umami (隐私友好、开源)
NEXT_PUBLIC_UMAMI_WEBSITE_ID=
NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://cloud.umami.is/script.js

# 可选：Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# 可选：百度统计
NEXT_PUBLIC_BAIDU_ANALYTICS_ID=

# Logging Configuration
# Set to true to disable verbose HTTP request logging in development
DISABLE_HTTP_LOGGING=false

# Set to true to disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=false

# Hide (node:75914) [DEP0040] DeprecationWarning: The `punycode` module is deprecated. Please use a userland alternative instead.
NODE_NO_WARNINGS=1
