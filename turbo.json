{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "db:generate"],
			"outputs": [".next/**", "!.next/cache/images/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"lint:fix": {},
		"format": {},
		"type-check": {},
		"db:migrate": {
			"cache": false
		},
		"db:generate": {
			"inputs": [
				"../../packages/lib-server/src/database/prisma/schema.prisma"
			],
			"outputs": [
				"node_modules/.prisma/**",
				"node_modules/@prisma/client/**",
				"../../packages/lib-server/src/database/prisma/zod/**"
			]
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:seed": {
			"cache": false
		},
		"db:seed-volunteer-roles": {
			"cache": false
		},
		"postinstall": {}
	}
}
